<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:clipToOutline="true"
        android:background="@drawable/border_style"
        android:src="@drawable/burgerrr"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img1"
        android:text="@string/burger"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtKtrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBurger"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginStart="20dp"
        android:text="@string/keterangan"
        android:textSize="13sp"
        android:textStyle="normal"
        android:textColor="@color/blueeee"
        />

    <TextView
        android:id="@+id/txtHburg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/burger_harga"
        android:textSize="13sp"
        android:textStyle="normal"
        android:textColor="@color/blue"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginStart="170dp"
        android:layout_below="@id/txtKtrg"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@id/txtHburg"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="218dp"
        android:layout_toRightOf="@+id/img1"
        android:src="@drawable/rating1"
        />


</RelativeLayout>