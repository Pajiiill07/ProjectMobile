<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuaActivity">

    <TextView
        android:id="@+id/txtJudul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PT. Fazila Surya A"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtJudul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJudul1"
        android:text="PEMBAYARAN GAJI KARYAWAN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TableLayout
        android:id="@+id/tblTbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJudul2"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >
        <TableRow>
            <TextView
                android:id="@+id/txtId"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editId"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtNama"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Nama Karyawan"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editNama"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtTgl"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Bayar"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editTgl"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtBagian"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Bagian/Jabatan"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editBagian"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtGaji"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaji Pokok"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editGaji"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Status Karyawan"
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
            <RadioGroup
                android:id="@+id/rgStts"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="160dp"
                >
                <RadioButton
                    android:id="@+id/rbTetap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetap"
                    />
                <RadioButton
                    android:id="@+id/rbKontrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontrak"
                    />
                <RadioButton
                    android:id="@+id/rbOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Out Sourcing"
                    />
            </RadioGroup>
        <TableRow>
            <TextView
                android:id="@+id/txtKawin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Status Perkawinan"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <Spinner
                android:id="@+id/spinKawin"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtAnak"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Anak"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editAnak"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtTunj"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaji Pokok"
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
            <CheckBox
                android:id="@+id/chk500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="180dp"
                />
            <CheckBox
                android:id="@+id/chk1jt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.000.000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="180dp"
                />
            <CheckBox
                android:id="@+id/chk2jt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.000.000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="180dp"
                />
        <TableRow>
            <TextView
                android:id="@+id/txtJam"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Jam Lembur"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editJam"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtPotongan"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Potongan"
                android:textStyle="bold"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/editPot"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>