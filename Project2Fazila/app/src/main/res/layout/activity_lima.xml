<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LimaActivity">

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Nilai Mahasiswa"
        android:layout_marginTop="30dp"
        android:textColor="@color/darkblue"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHasil"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/txtOutNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:textColor="@color/darkblue"
            android:textSize="18dp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/txtOutProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi"
            android:textColor="@color/darkblue"
            android:textSize="18dp"
            android:textStyle="normal"

            />
        <TextView
            android:id="@+id/txtOutUas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UAS"
            android:textColor="@color/darkblue"
            android:textSize="18dp"
            android:textStyle="normal"

            />
        <TextView
            android:id="@+id/txtOutHarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harian"
            android:textColor="@color/darkblue"
            android:textSize="18dp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai Akhir"
            android:textColor="@color/darkblue"
            android:textSize="18dp"
            android:textStyle="normal"
            />

    </LinearLayout>

</RelativeLayout>